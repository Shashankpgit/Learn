# Application Configuration
APP_ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8080

# Database Configuration
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=workflow_db
DB_PORT=5432

# Storage Provider Configuration
# Options: minio, s3, gcs
STORAGE_PROVIDER=minio

# MinIO Configuration (for local development)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=credentials-bucket
MINIO_USE_SSL=false

# AWS S3 Configuration (uncomment when using S3)
# AWS_REGION=ap-south-1
# AWS_BUCKET=my-app-bucket
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# GCP Cloud Storage Configuration (uncomment when using GCS)
# GCP_BUCKET=my-gcs-bucket
# GCP_CREDENTIALS_FILE=/etc/gcp/service-account.json
